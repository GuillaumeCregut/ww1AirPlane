{% extends 'base.html.twig' %}

{% block title %}Constructeurs{% endblock %}

{% block body %}
    <h1>Constructeurs</h1>
    <div class="header-btn">
        <a href="{{ path('app_builder_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="global-cell">Name</th>
                <th class="global-cell">Pays</th>
                <th class="global-cell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for builder in builders %}
            <tr>
                <td class="global-cell">{{ builder.name }}</td>
                <td class="global-cell">{{ builder.country.name }}</td>
                <td class="global-cell">
                    <div class="action-container">
                        {{ include('builder/_delete_form.html.twig') }}
                        <a href="{{ path('app_builder_edit', {'id': builder.id}) }}" class="btn btn-primary">Editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
