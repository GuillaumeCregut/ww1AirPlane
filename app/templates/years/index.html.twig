{% extends 'base.html.twig' %}

{% block title %}Années{% endblock %}

{% block body %}
    <h1>Années</h1>
    <div class="header-btn">
        <a href="{{ path('app_years_new') }}" class="btn btn-primary">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="global-cell">Nom</th>
                <th class="global-cell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for year in years %}
            <tr>
                <td class="global-cell">{{ year.name }}</td>
                <td class="global-cell">
                    <div class="action-container">
                        {{ include('years/_delete_form.html.twig') }}
                        <a href="{{ path('app_years_edit', {'id': year.id}) }}" class="btn btn-primary">Editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
