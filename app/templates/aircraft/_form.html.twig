{{ form_start(form) }}
{{form_row(form.name)}}
{{form_row(form.description)}}
<div {{ stimulus_controller('aircraft')}}>
	<p>Photo :
	</p>
	<label class="drop-container" data-aircraft-target="dropcontainer" for="aircraft_picture">
		<span class="drop-title">DÃ©poser des images ici</span>
		ou
		{{form_widget(form.picture, {
            attr: {
               'data-action': 'change->aircraft#changeFile',
               'data-aircraft-target': 'fileLoader'
            }
        })}}
	</label>
	<div class="picture_container" {{ stimulus_target('aircraft','picturePreview') }}></div>
</div>
<fieldset class="fieldset-container">
	<legend>{{form_label(form.type)}}</legend>
	<div class="cb_container">
		{% for checkbox in form.type.children %}
			<div class="cb_item">
				{{ form_widget(checkbox) }}
				{{ form_label(checkbox) }}
				{{ form_errors(checkbox) }}
			</div>

		{% endfor %}
	</div>
</fieldset>
	<fieldset class="fieldset-container">
		<legend>{{form_label(form.nbSeats)}}</legend>
		<div class="cb_container">
			{% for checkbox in form.nbSeats.children %}
				<div class="cb_item">
					{{ form_widget(checkbox) }}
					{{ form_label(checkbox) }}
					{{ form_errors(checkbox) }}
				</div>

			{% endfor %}
		</div>
	</fieldset>
	<fieldset class="fieldset-container">
		<legend>{{form_label(form.nbWings)}}</legend>
		<div class="cb_container">
			{% for checkbox in form.nbWings.children %}
				<div class="cb_item">
					{{ form_widget(checkbox) }}
					{{ form_label(checkbox) }}
					{{ form_errors(checkbox) }}
				</div>

			{% endfor %}
		</div>
	</fieldset>

{{ form_widget(form) }}


<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
