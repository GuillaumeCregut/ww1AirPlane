{% extends 'base.html.twig' %}

{% block title %}Builder index{% endblock %}

{% block body %}
    <h1>Builder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for builder in builders %}
            <tr>
                <td>{{ builder.id }}</td>
                <td>{{ builder.name }}</td>
                <td>
                    <a href="{{ path('app_builder_show', {'id': builder.id}) }}">show</a>
                    <a href="{{ path('app_builder_edit', {'id': builder.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_builder_new') }}">Create new</a>
{% endblock %}
