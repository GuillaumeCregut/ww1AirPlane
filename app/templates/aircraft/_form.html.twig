{{ form_start(form) }}
{{form_row(form.name)}}
{{form_row(form.description)}}
<div {{ stimulus_controller('aircraft')}}>
	<p>Photo : </p>
	<label class="drop-container" data-aircraft-target="dropcontainer" for="aircraft_picture">
	<span class="drop-title">DÃ©poser des images ici</span>
	ou
	{{form_widget(form.picture, {
            attr: {
               'data-action': 'change->aircraft#changeFile',
               'data-aircraft-target': 'fileLoader'
            }
        })}}
	</label>
	<div class="picture_container" {{ stimulus_target('aircraft','picturePreview') }}></div>
