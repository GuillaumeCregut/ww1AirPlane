{% extends 'base.html.twig' %}

{% block title %}Aircraft index{% endblock %}

{% block body %}
    <h1>Aircraft index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FullDateIn</th>
                <th>FullDateOut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aircraft in aircraft %}
            <tr>
                <td>{{ aircraft.id }}</td>
                <td>{{ aircraft.name }}</td>
                <td>{{ aircraft.fullDateIn ? aircraft.fullDateIn|date('d/m/Y') : '' }}</td>
                <td>{{ aircraft.fullDateOut ? aircraft.fullDateOut|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_aircraft_show', {'id': aircraft.id}) }}">show</a>
                    <a href="{{ path('app_aircraft_edit', {'id': aircraft.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_aircraft_new') }}">Create new</a>
{% endblock %}
