{% extends 'base.html.twig' %}

{% block title %}Types d'avion{% endblock %}

{% block body %}
    <h1>Type d'avion</h1>
    <div class="header-btn">
        <a href="{{ path('app_aircraft_type_new') }}" class="btn btn-primary">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="global-cell">Nom</th>
                <th class="global-cell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aircraft_type in aircraft_types %}
            <tr>
                <td class="global-cell">{{ aircraft_type.name }}</td>
                <td class="global-cell">
                    <div class="action-container">
                         {{ include('aircraft_type/_delete_form.html.twig') }}
                        <a href="{{ path('app_aircraft_type_edit', {'id': aircraft_type.id}) }}" class="btn btn-primary">editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
