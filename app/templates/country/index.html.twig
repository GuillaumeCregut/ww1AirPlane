{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
    <h1>Pays</h1>
    <div class="header-btn">
        <a href="{{ path('app_country_new') }}"  class="btn btn-primary">Nouveau</a>
     </div>
    <table class="table">
        <thead>
            <tr>
                <th class="global-cell">Name</th>
                <th class="global-cell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td class="global-cell">{{ country.name }}</td>
                <td class="global-cell">
                    <div class="action-container">
                        {{ include('country/_delete_form.html.twig') }}
                        <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn btn-primary">editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
